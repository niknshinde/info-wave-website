</nav>



<div class="hamburger-menu-content">
    <div class="hamburger-menu" onclick="toggleMenu()">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
    </div>
    <ul class="hidennbar">
        <li><a href="/business"><img  width="20px" src="images/agreement.png" alt=""> Business</a></li>
        <hr>
        <li><a href="/entertainment"><img  width="20px" src="images/video.png" alt="">Entertainment</a></li>
        <hr>
        <li><a href="/general"><img  width="20px" src="images/global.png" alt="">General</a></li>
        <hr>
        <li><a href="/health"><img  width="20px" src="images/healthcare.png" alt="">Health</a></li>
        <hr>
        <li><a href="/science"><img  width="20px" src="images/microscope.png" alt="">Science</a></li>
        <hr>
        <li><a href="/sports"><img  width="20px" src="images/sports.png" alt="">Sports</a></li>
        <hr>
        <li><a href="/technology"><img  width="20px" src="images/technology.png" alt="">Technology</a></li>
        <hr>
    </ul>
</div>


  

<!-- <main> -->
  <div class="flex-container">
    <% for (let i = 0; i < content.articles.length; i++) { %>
      <a href="<%= content.articles[i].url %>" target="_blank"> <!-- Make the entire class element clickable -->
        <div class="one com">
          <div class="img-container">
            <% if (content.articles && content.articles[i] && content.articles[i].urlToImage !== null) { %>
              <img class="news-image" src="<%= content.articles[i].urlToImage %>" alt="">
            <% } else { %>
              <!-- Provide a default image or alternative content if the image is not available -->
            <% } %>
          </div>
          <div class="news-container">
            <% if(content.articles && content.articles[i] && content.articles[i].title != null) { %>
              <h2 class="heading"><%= content.articles[i].title %></h2>
            <% } %>

            <% if(content.articles && content.articles[i] && content.articles[i].source.name != null) { %>
              <span class="source_name"><%= content.articles[i].source.name %></span>
            <% } %>

            <% if(content.articles && content.articles[i] && content.articles[i].publishedAt != null) { %>
              <span class="pubdate"><%= content.articles[i].publishedAt %></span>
            <% } %>
           
            <% if(content.articles && content.articles[i] && content.articles[i].description != null) { %>
              <p class="description"><%= content.articles[i].description %></p>
            <% } %>
      
            
          </div>
        </div>
      </a> <!-- Closing the anchor tag -->
    <% } %>
  </div>
<!-- </main> -->
  <script>
    const hamburgerMenuContent = document.querySelector('.hamburger-menu-content');

    function toggleMenu() {
        hamburgerMenuContent.classList.toggle('active');
    }

    // Close the sidebar when clicking outside the sidebar
    window.addEventListener('click', function (event) {
        const hamburgerMenu = document.querySelector('.hamburger-menu');
        if (!event.target.classList.contains('hamburger-menu') && !hamburgerMenu.contains(event.target) && !hamburgerMenuContent.contains(event.target)) {
            hamburgerMenuContent.classList.remove('active');
        }
    });
</script>

</body>
</html>

